<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "main.scss" %>	

<h1>Trainers List</h1>
<p> Number of trainers: <%= @trainers.count %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.tname %></td>
        <td><%= trainer.level %></td>
        <td><%= link_to 'Trainer Info', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to image_tag('delete.png', size: "20x20"), trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trainer', new_trainer_path %>
